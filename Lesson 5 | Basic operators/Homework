//1 Порахувати кількість секунд від Нового року до дня свого народження.

let second = 1
let minute = 60 * second
let hour = 60 * minute
let day = 24 * hour

let january = 31 * day
let february = 28 * day
let march = 31 * day

let myBirthdayInSeconds = (january + february + march) - day

//2 Порахувати в якому кварталі я народилась.

let myBirthMonth = 3
print("My birthday quater is \((myBirthMonth - 1) / 3 + 1).")

// 3  Шахматна дошка 8х8. Написати формулу для визначення кольору клітинки.

var chess : (x: Int, y: Int)
chess = (5, 8)

if (chess.x + chess.y) % 2 == 0 {
    print("The chess is black.")
} else {
    print("The chess is white.")
}
